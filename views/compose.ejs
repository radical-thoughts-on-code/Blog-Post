<%- include('partials/header') -%>

<h1><%= header %> </h1>
<form class="form width" action="/compose" method="post">
    <div>
        <label for="post-title">Title</label>
        <input name="title" id="post-title" type="text" placeholder="Title">
    </div>

    <div>
        <label for="Post-msg">Post</label>
        <textarea name="message" id="Post-msg" cols="5" rows="6" placeholder="Content"></textarea>
        <button type="submit" class="btn btn-primary">Publish</button>
    </div>


</form>

<%- include('partials/footer') -%>